<div class="main-hed miller-banner-regular">
	Me & my shoes
	<div class="main-hed__dek">
		Every shoe has a story, and every runner loves to tell how they found their shoes.
	</div> 
</div>

<div class="runner">
{{#each copy.runners}}
	{{#if image}}
		<img src="assets/photos/{{image}}.jpg" class="runner__image">
	{{/if}}
	<div class="runner__name miller-banner-regular">
		{{name}}
	</div>
	<div class="runner__meta">
		<div class="runner__meta-item">My shoes: Asics X1230
		</div>
		<div class="runner__meta-item">When I bought them: 2014
		</div>
		<div class="runner__meta-item">Cost: $125
		</div>
		<div class="runner__meta-item">Races run: New York Marathon, Tufts 5K
		</div>
	</div>
	<div class="runner__story">
		{{#each story}}
		<p>{{this}}</p>
		{{/each}}
	</div>
	{{!-- <div class="runner__quote miller-regular">
		"Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit..."
	</div> --}}
{{/each}}
</div>